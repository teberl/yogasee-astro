<style>
  nav#nav-header {
    position: sticky;
    top: 0;
    z-index: 50;
  }

  nav#nav-header.minimal {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  nav#nav-header.minimal #logo-text {
    font-size: 1rem;
  }

  nav#nav-header.minimal #logo-subheadline {
    display: none;
  }

  nav#nav-header.minimal #menu-toggle svg {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>

<script>
  const navHeader = document.getElementById('nav-header');
  const heroSection = document.getElementById('hero-section');

  window.addEventListener('scroll', () => {
    // Only shrink nav on mobile devices
    const isMobile = window.innerWidth < 768;
    
    if (isMobile) {
      // Check if scrolled past hero section
      const heroBottom = (heroSection?.offsetTop || 0) + (heroSection?.offsetHeight || 0);
      
      if (window.scrollY > heroBottom) {
        navHeader?.classList.add('minimal');
      } else {
        navHeader?.classList.remove('minimal');
      }
    } else {
      // On desktop, always remove minimal class
      navHeader?.classList.remove('minimal');
    }
  });

  // Menu toggle script
  const menuToggle = document.getElementById('menu-toggle');
  const closeMenu = document.getElementById('close-menu');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOverlay = document.getElementById('menu-overlay');

  function openMenu() {
    mobileMenu?.classList.remove('translate-x-full');
    menuOverlay?.classList.remove('opacity-0', 'invisible');
    document.body.style.overflow = 'hidden';
  }

  function closeMenuFn() {
    mobileMenu?.classList.add('translate-x-full');
    menuOverlay?.classList.add('opacity-0', 'invisible');
    document.body.style.overflow = '';
  }

  menuToggle?.addEventListener('click', openMenu);
  closeMenu?.addEventListener('click', closeMenuFn);
  menuOverlay?.addEventListener('click', closeMenuFn);

  // Close menu when a link is clicked
  const menuLinks = mobileMenu?.querySelectorAll('a');
  menuLinks?.forEach(link => {
    link.addEventListener('click', closeMenuFn);
  });
</script>


