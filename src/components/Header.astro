<nav class="w-full bg-white shadow-md py-4 px-6 sticky top-0 z-50 transition-all duration-300" id="nav-header">
  <div class="max-w-6xl mx-auto flex justify-between items-center">
    <div id="logo-container">
      <div class="text-2xl font-bold tracking-wide text-yogasee-primary" id="logo-text">YOGASEE</div>
      <div id="logo-subheadline" class="text-xs font-light text-yogasee-primary">Raum für dich</div>
    </div>
    <div id="mobile-menu" class="fixed md:static inset-0 md:inset-auto bg-white md:bg-transparent flex flex-col md:flex-row gap-8 px-6 py-8 md:px-0 md:py-0 transform transition-transform duration-300 ease-in-out translate-x-full md:translate-x-0 z-40 md:z-auto">
      <button id="close-menu" class="md:hidden absolute top-6 right-6 transition text-yogasee-primary">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      <a href="#about-me" class="transition font-medium text-lg md:text-base text-yogasee-primary">
        Über mich
      </a>
      <a href="#private-lessons" class="transition font-medium text-lg md:text-base text-yogasee-primary">
        Einzelunterricht
      </a>
      <a href="#company-yoga" class="transition font-medium text-lg md:text-base text-yogasee-primary">
        Unternehmen
      </a>
      <a href="#raum" class="transition font-medium text-lg md:text-base text-yogasee-primary">
        Raum
      </a>
      <a href="#contact" class="transition font-medium text-lg md:text-base text-yogasee-primary">
        Kontakt
      </a>
    </div>
    <div id="menu-overlay" class="fixed md:hidden inset-0 bg-black bg-opacity-50 transform transition-opacity duration-300 opacity-0 invisible md:opacity-0 md:invisible z-30" aria-hidden="true"></div>
    <button id="menu-toggle" class="md:hidden transition-all duration-300 text-yogasee-primary" aria-label="Toggle menu">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
</nav>

<header class="w-full" id="main-header">
  <!-- Hero Section -->
    <section class="w-full py-24 px-6 bg-gradient-to-b from-yogasee-light via-white to-yogasee-light" id="hero-section">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-6 inline-block">
        <div class="text-6xl md:text-7xl font-bold mb-2 text-yogasee-primary">YOGASEE</div>
        <div class="text-xl md:text-2xl mb-4 font-light text-yogasee-primary">Raum für dich</div>
        <div class="h-1 w-24 mx-auto rounded bg-yogasee-accent"></div>
      </div>
      <h1 class="text-3xl md:text-4xl font-light mb-6 leading-relaxed text-yogasee-primary">
        Yoga in Unternehmen und Einzelstunden auf Anfrage
      </h1>
      <p class="text-xl max-w-2xl mx-auto mb-8 text-yogasee-secondary">
        Achtsame Yoga-Praxis für mehr Wohlbefinden und Klarheit – individuell angepasst an deine Bedürfnisse
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="#private-lessons"
          class="px-8 py-3 text-white font-semibold rounded-lg transition shadow-md bg-yogasee-primary hover:opacity-90"
        >
          Einzelunterricht
        </a>
        <a 
          href="#company-yoga"
          class="px-8 py-3 font-semibold rounded-lg transition border-2 border-yogasee-primary text-yogasee-primary hover:bg-yogasee-light"
        >
          Yoga im Unternehmen
        </a>
      </div>
    </div>
  </section>
</header>

<style>
  nav#nav-header {
    position: sticky;
    top: 0;
    z-index: 50;
  }

  nav#nav-header.minimal {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  nav#nav-header.minimal #logo-text {
    font-size: 1rem;
  }

  nav#nav-header.minimal #logo-subheadline {
    display: none;
  }

  nav#nav-header.minimal #menu-toggle svg {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>

<script>
  const navHeader = document.getElementById('nav-header');
  const heroSection = document.getElementById('hero-section');

  window.addEventListener('scroll', () => {
    // Check if scrolled past hero section
    const heroBottom = (heroSection?.offsetTop || 0) + (heroSection?.offsetHeight || 0);
    
    if (window.scrollY > heroBottom) {
      navHeader?.classList.add('minimal');
    } else {
      navHeader?.classList.remove('minimal');
    }
  });

  // Menu toggle script
  const menuToggle = document.getElementById('menu-toggle');
  const closeMenu = document.getElementById('close-menu');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOverlay = document.getElementById('menu-overlay');

  function openMenu() {
    mobileMenu?.classList.remove('translate-x-full');
    menuOverlay?.classList.remove('opacity-0', 'invisible');
    document.body.style.overflow = 'hidden';
  }

  function closeMenuFn() {
    mobileMenu?.classList.add('translate-x-full');
    menuOverlay?.classList.add('opacity-0', 'invisible');
    document.body.style.overflow = '';
  }

  menuToggle?.addEventListener('click', openMenu);
  closeMenu?.addEventListener('click', closeMenuFn);
  menuOverlay?.addEventListener('click', closeMenuFn);

  // Close menu when a link is clicked
  const menuLinks = mobileMenu?.querySelectorAll('a');
  menuLinks?.forEach(link => {
    link.addEventListener('click', closeMenuFn);
  });
</script>


