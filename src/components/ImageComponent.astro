---
interface Props {
  src: string;
  alt: string;
  title?: string;
  width?: number;
  height?: number;
  class?: string;
}

const { src, alt, title, width = 800, height = 600, class: classes = "" } = Astro.props;
---

<figure class={`overflow-hidden rounded-lg shadow-md ${classes}`}>
  <img 
    {src} 
    {alt} 
    {width} 
    {height}
    loading="lazy"
    decoding="async"
    class="w-full h-auto object-cover hover:scale-105 transition duration-300"
  />
  {title && <figcaption class="text-sm text-yogasee-secondary p-3 bg-gray-50 text-center">{title}</figcaption>}
</figure>

