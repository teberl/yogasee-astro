---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Yoga in Unternehmen und Einzelstunden" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  :root {
    --color-primary: #2d5016;
    --color-secondary: #8ba888;
    --color-accent: #d4c9b9;
    --color-light: #f5f3f0;
    --color-dark: #1a1a1a;
  }
</style>
